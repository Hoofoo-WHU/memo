@import './color'

msg(type)
  background-color lightness($color_ + type, 95%)
  color $color_ + type
  border 1px solid lightness($color_ + type, 90%)

.toast
  position fixed
  top 10px
  left 50%
  transform translate3d(-50%, -100%, 0)
  opacity 0
  transition all 0.3s
  padding 10px 20px
  border-radius 3px
  font-size 14px
  msg(info)

  &.active
    opacity 1
    transform translate3d(-50%, 0, 0)

  &.info
    msg(info)

  &.success
    msg(success)

  &.warn
    msg(warning)

  &.error
    msg(danger)